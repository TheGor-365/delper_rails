<div class="container">
  <div>
    <h1>Ruby</h1>
  </div>

  <% @rubies.each do |ruby| %>
    <div class="container mt-5 border rounded p-3">
      <div class="">
        <h4>
          <%= ruby.lesson_title %> <small class="text-muted"> Lesson number: <%= ruby.lesson_number %></small>
        </h4>
        <small class="text-muted">
          The question: <%= ruby.question %>
        </small>
      </div>

      <hr>
      <div class="border rounded">
        <%= ruby.answer %>
      </div>
      <hr>

      <div class="border rounded">
        <small class="text-muted">
          Example:
        </small>
        <hr>
          <%= ruby.example %>
        <hr>
      </div>
      <div class="container mt-4">
        <div class="row">
          <%= link_to 'Show', technology_ruby_path(ruby), :class => "btn btn-primary btn-sm mr-2" %>
          <%= link_to 'Edit', edit_technology_ruby_path(ruby), :class => "btn btn-primary btn-sm mr-2" %>
          <%= button_to 'Delete', technology_ruby_path(ruby), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
